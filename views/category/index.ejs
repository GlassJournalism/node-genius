<br>
<div class="row">
    <div class="small-12 columns">
        <h1>Categories</h1>
    </div>
    <% for(var i = 0; i < categories.length; i++){ %>
    <div class="small-6 columns">
        <div class="panel">
            <div class="row">
                <div class="small-9 columns">
                    <h2><a href="/category/edit/<%= categories[i].id %>"><%= categories[i].name %></a></h2>
                </div>
                <div class="small-3 columns">
                    <button class="button small alert delete-button" id="<%= categories[i].id %>">Delete</button>
                </div>
            </div>
        </div>
    </div>
    <% } %>
    <div class="small-12 columns">
        <a class="button" href="/category/add">New</a>
    </div>
</div>

<script>
    $(document).ready(function () {
        $(".delete-button").on('click', function deleteClick() {
            var url = '/category/' + $(this).prop('id');

            $.ajax({
                url: url,
                type: 'DELETE',
                success: function (result) {
                    location.reload();
                }
            });
        });
    });

</script>

